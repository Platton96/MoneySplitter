<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="CheckBox" x:Key="IsCollaboratorCheckBoxStyle">
        <Setter Property="IsThreeState" Value="False"/>
        <Setter Property="Margin" Value="5,4,0,0"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="CollaboratorsListHeaderStyle" BasedOn="{StaticResource ListHeaderTextStyle}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,4"/>
    </Style>
    <Style TargetType="DatePicker" x:Key="TransactionDateStyle">
        <Setter Property="Margin" Value="5,4"/>
    </Style>
    <Style TargetType="Button" x:Key="ConfirmButtonStyle" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,8,0,16"/>
    </Style>
    <Style TargetType="TextBox" x:Key="DescriptionTextBoxStyle" BasedOn="{StaticResource DefaultTextBoxStyle}">
        <Setter Property="Width" Value="350"/>
        <Setter Property="MaxHeight" Value="100"/>
        <Setter Property="TextWrapping" Value="WrapWholeWords"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
    </Style>
    <Style TargetType="ListView" x:Key="CollaboratorsListViewStyle">
        <Setter Property="IsItemClickEnabled" Value="True"/>
    </Style>
</ResourceDictionary>
