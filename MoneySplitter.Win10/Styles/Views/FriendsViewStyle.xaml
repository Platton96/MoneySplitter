<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:customControls="using:MoneySplitter.Win10.CustomControls">
    
    <Style TargetType="customControls:MobileUserControl" x:Key="MobileUserControlStyle1">
        <Setter Property="IsRemove" Value="True"/>
        <Setter Property="IsButtonVisible" Value="True"/>
    </Style>
    
    <Style TargetType="customControls:DesktopUserContol" x:Key="DesktopUserContolStyle1">
        <Setter Property="IsRemove" Value="True"/>
    </Style>

    <Style TargetType="ListView" x:Key="FriendsListStyle">
        <Setter Property="IsItemClickEnabled" Value="True"/>
    </Style>

    <Style TargetType="GridView" x:Key="FriendsGridViewStyle">
        <Setter Property="IsItemClickEnabled" Value="True"/>
    </Style>

</ResourceDictionary>
